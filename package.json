{
  "name": "releaz",
  "version": "4.0.0",
  "description": "A tool for generate release note",
  "author": "LitoMore <litomore@gmail.com>",
  "type": "module",
  "exports": "./distribution/source/index.js",
  "types": "distribution/source",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "distribution/source"
  ],
  "scripts": {
    "build": "del-cli distribution && tsc",
    "test": "npm run build && xo && c8 ava"
  },
  "repository": "git@github.com:LitoMore/releaz.git",
  "license": "MIT",
  "dependencies": {
    "execa": "^6.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^17.0.4",
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "del-cli": "^4.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "xo": "^0.47.0"
  },
  "ava": {
    "files": [
      "test/test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "prettier": true
  }
}
